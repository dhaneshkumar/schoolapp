<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:orientation="vertical" xmlns:android1="http://schemas.android.com/apk/res/android">

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android1:background="@color/darkBlue"
    android:orientation="horizontal">

    
    <ImageView
        android1:id="@+id/imageView1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentTop="true"
        android1:layout_centerHorizontal="true"
        android1:layout_centerVertical="true"
        android1:src="@drawable/ic_launcher" />
    
    
    
    <Spinner
        android1:id="@+id/selectdays"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_margin="2dp"
        android1:layout_toRightOf="@+id/imageView1"
        android1:layout_alignParentTop="true"
        
        android1:entries="@array/days" />
	
    <Spinner
        android1:id="@+id/selectdays2"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_margin="2dp"
        android1:layout_alignParentRight="true"
   		android:layout_marginBottom="1dp"
        android1:entries="@array/sections" />
    
    <Spinner
        android1:id="@+id/selectdays1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_margin="2dp"
        android1:layout_toLeftOf="@+id/selectdays2"
        android1:layout_alignParentTop="true"
        
        android1:entries="@array/classes" />
    

    

</RelativeLayout>  
    
