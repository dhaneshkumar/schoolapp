          />
      
          </TableRow>
      
      <TableRow android:layout_height="1px" android:background="@color/silver">
   <TextView android:layout_span="2" android:layout_height="1px" 
             android:layout_width="fill_parent" android:text="">
   </TextView>
</TableRow>
      <TableRow >
          
          <TextView 
          android:id="@+id/concern"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:paddingLeft="5dip"
          android:paddingTop="5dip"
          android:paddingBottom="5dip"
          android:layout_marginLeft="4dp"
          android:layout_marginTop="4dp"
          android:layout_marginBottom="4dp"
          android:textSize="15sp"
          android:textColor="#000"
          android:textStyle="bold"
          android:layout_weight="5"
          android:text="Email ID"
          />
             
      <TextView 
          android:id="@+id/emailid"
          android:layout_toRightOf="@+id/concernperson"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:layout_marginBottom="4dp"
          android:textSize="15sp"
          android:textColor="#000"
         android:paddingTop="5dip"
         android:paddingBottom="5dip"
          android:layout_weight="7"
          android:text="suhani@gmail.com"
          />
          
          
      </TableRow>
    </TableLayout>
      
 <TextView 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="5dip"
          android:paddingTop="5dip"
          android:paddingBottom="5dip"
          android:layout_marginLeft="4dp"
          android:layout_marginTop="6dp"
          android:layout_marginBottom="6dp"
          android:textSize="14sp"
          android:textColor="#000"
          android:gravity="center"
          android:background="@color/white"
          android:textStyle="bold"
          android:text="Add other Guardians"
          /> 
    
</LinearLayout>
</ScrollView>
