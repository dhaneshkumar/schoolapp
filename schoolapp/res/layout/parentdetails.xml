          android:layout_height="wrap_content"
          android:paddingLeft="5dip"
          android:paddingTop="5dip"
          android:paddingBottom="5dip"
          android:layout_marginLeft="4dp"
          android:layout_marginTop="4dp"
          android:layout_marginBottom="4dp"
