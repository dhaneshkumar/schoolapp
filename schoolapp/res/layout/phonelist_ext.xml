<?xml version="1.0" encoding="utf-8"?>

<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:background="@color/app_back_color"
  android:layout_height="fill_parent">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/app_back_color" 
    android:orientation="vertical" >

    
  <ImageView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"  
            android:background="@color/contact_back_color"
            android:layout_marginTop="20dp" 
            android:paddingTop="3dp"
            android:paddingBottom="3dp"   
            android:adjustViewBounds="true"
           />
   
      <TextView 
          android:id="@+id/name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:textSize="15sp"
          android:gravity="center"
          android:text="Amitabh Bachhan"
          />
      
      <TextView 
          android:id="@+id/clas"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:textSize="15sp"
          android:gravity="center"
          android:textColor="#000"
          android:text="class : 3A 4B "
          />
         
      <TextView 
          android:id="@+id/subjects"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:textSize="15sp"
          android:textColor="#000"
          android:gravity="center"
          android:text="Subjects : Maths, GK"
          />

 <TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
   >
      
      <TableRow
          android:layout_width="match_parent"
          android:background="@color/contact_back_color"
          android:layout_height="wrap_content" >

          <TextView
              android:id="@+id/contactno"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              
              android:background="@color/contact_back_color"
              android:text="8976208450"
              android:gravity="center"
              android:layout_weight="2"
              
              android:textColor="@color/contact_font_color"
              android:textSize="15sp" />
          
           <TextView
              android:id="@+id/callbutton"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:background="@drawable/customshape"
              android:text="call"
              android:gravity="center"
              android:layout_weight="1"
              android:layout_margin="4dp"
              android:padding="2dp"
              android:textColor="@color/contact_back_color"
              android:textSize="16sp" />
          
          
      </TableRow>
      
   
      <TableRow >
          
        
      <TextView 
          android:id="@+id/emailid"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:textSize="16sp"
          android:gravity="center"
          android:paddingTop="6dp"
         android:paddingRight="25dp"
          android:paddingBottom="6dp"
          android:layout_weight="1"
          android:textColor="@color/contact_font_color"
          android:background="@color/contact_back_color"
          android:text="dhaneshkr26@gmail.com"
          />
          
          
      </TableRow>
    </TableLayout>
     
</LinearLayout>
</ScrollView>
